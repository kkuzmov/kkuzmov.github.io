{{> header}}
<form class="form-edit-recipe" action="#/edit/{{currRecipe.id}}" method="POST" id="edit-receipt-form">
    <p class="form-edit-recipe-heading">Edit Recipe</p>
    <label for="meal">Meal</label>
    <input type="text" id="defaultRecepieEditMeal" name="meal" class="form-edit-recipe-input" placeholder="Meal"
        value="{{currRecipe.meal}}">
    <label for="ingredients">Ingredients</label>
    <input type="text" id="defaultRecepieEditIngredients" name="ingredients" class="form-edit-recipe-input"
        placeholder="Ingredients" value="{{currRecipe.ingredients}}">
    <label for="prepMethod">Method of preparation</label>
    <textarea type="text" id="defaultRecepieEditMethodOfPreparation" name="prepMethod" class="form-edit-recipe-input"
        placeholder="Method of preparation">{{currRecipe.prepMethod}}</textarea>
    <label for="description">Notes and reminders</label>
    <textarea type="text" id="defaultRecepieEditDescription" name="description" class="form-edit-recipe-input"
        placeholder="Description">{{currRecipe.description}}</textarea>
    <label for="foodImageURL">Food Image URL...</label>
    <input type="text" id="defaultRecepieEditFoodImageURL" name="foodImageURL" class="form-edit-recipe-input"
        placeholder="Food Image URL..." value="{{currRecipe.foodImageURL}}">
    <label for="cookScale">Recookable scale</label><br>
    <section class="range">
        <span class="scale">Never again</span>
        <input id="cookScale" name="cookScale" type="range" min="0" max="10" step="1">
        <span class="scale">Favorite</span>
    </section>
    <label for="category">Meal categories</label><br>
    <select name="category">
        <option selected>Select category...</option>
        <option>Vegetables and legumes/beans</option>
        <option>Fruits</option>
        <option>Grain Food</option>
        <option>Milk, cheese, eggs and alternatives</option>
        <option>Lean meats and poultry, fish and alternatives</option>
    </select>
    <button class="form-button" type="submit">Save</button>
</form>
{{> footer}}
